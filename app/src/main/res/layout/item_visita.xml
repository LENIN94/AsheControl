<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_red_500"
    card_view:cardBackgroundColor="@color/md_red_500"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imagen"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitStart" />

        <com.mx.ashe.ashecontrol.UI.TextViewPersonalizado
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imagen"
            android:text="Large Text"
            android:textColor="@color/md_grey_100"
            android:textSize="18dp"
            />

        <com.mx.ashe.ashecontrol.UI.TextViewPersonalizado
            android:id="@+id/visitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nombre"
            android:layout_below="@+id/nombre"
            android:textColor="@color/md_grey_100"
            android:text="Small Text"
           />
    </RelativeLayout>
</android.support.v7.widget.CardView>