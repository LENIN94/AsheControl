<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_red_800"
            android:orientation="vertical">

            <com.mx.ashe.ashecontrol.UI.TextViewPersonalizado
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="BitÃ¡cora de Visita"
                android:textColor="#fff"
                android:textSize="50sp" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="2dp"

                android:textAlignment="center">

                <com.mx.ashe.ashecontrol.UI.EditTextPersonalizado
                    android:id="@+id/edtDetalles"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Detalles:"

                    android:padding="10dp"
                    android:textSize="20sp" />
            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <com.mx.ashe.ashecontrol.UI.ButtonPersonalizado
                    android:id="@+id/btndismis"
                    style="@style/ButtonP"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:layout_height="wrap_content"
                    android:text="Cancelar" />

                <com.mx.ashe.ashecontrol.UI.ButtonPersonalizado
                    android:id="@+id/btncheck"
                    style="@style/ButtonP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guardar" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</ScrollView>