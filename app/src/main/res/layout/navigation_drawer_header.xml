<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="@color/md_red_800"
    android:gravity="bottom"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginTop="@dimen/navigation_drawer_header_margin"
        android:scaleType="fitStart"
        android:src="@drawable/log" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_gravity="left|bottom"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <com.mx.ashe.ashecontrol.UI.TextViewPersonalizado
            android:id="@+id/tvEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="Grupo ASHE S.A. de C.V"
            android:textSize="18dp" />

        <com.mx.ashe.ashecontrol.UI.TextViewPersonalizado
            android:id="@+id/tvNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="User" />

    </LinearLayout>

</FrameLayout>
 